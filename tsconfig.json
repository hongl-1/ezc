{
  "compilerOptions": {
    "lib": ["es2017"],
    "module": "es2020",
    "target": "es2016",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "strict": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": ["actions", "bin", "commands", "lib", "utils", "src"],
  "exclude": ["node_modules", "e2e"]
}
