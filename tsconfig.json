{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es2017"],
    "module": "es2020",
    "target": "es2016",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "strict": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "allowSyntheticDefaultImports": true
  },
}
